{% extends 'base.html.twig' %}

{% block title %}Modifier ma présentation{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
<div class="col-10 col-md-7 mx-auto my-4">
   <p><a href="{{path('candidate_profile')}}" class="btn btn-dark"><i class="fas fa-arrow-circle-left"></i> Retour</a></p>

<h1>Modifier ma présentation</h1>

    {# Messages flash #}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success flash-message mb-2">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger flash-message mb-2">
            {{ message }}
        </div>
    {% endfor %}

{# Formulaire champs A propos #}
{{ form_start(aboutForm, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(aboutForm) }}
<button type="submit" class="btn btn-secondary mb-2">Valider</button>
    </button>
{{ form_end(aboutForm) }}
</div>
{% endblock %}

{% block footer %}

    <footer>
        <nav class="navbar fixed-bottom navbar-light bg-light justify-content-center">
            <form class="form-inline">
                <a href="{{path('legal_mentions')}}"><button class="btn btn-sm btn-outline-secondary footer-button" type="button">Mentions légales</button></a>
                <a href="{{path('contact_us')}}"><button class="btn btn-sm btn-outline-secondary footer-button" type="button">Nous contacter</button></a>
            </form>
        </nav>
    </footer>

{% endblock %}